{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": false,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["webpack.config.ts", "src/**/*"]
}
